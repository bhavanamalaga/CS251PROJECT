<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:layout_marginStart="5pt"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Edit Details"
        android:textColor="@color/teal_200"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="15pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5pt"
            android:gravity="center"
            android:text="Date of Birth : "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="dd/mm/yyyy "
            android:id="@+id/dob"
            android:layout_weight="1" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:id="@+id/update_dob_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="45pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:layout_marginStart="5pt"
            android:gravity="center"
            android:text="Nationality : "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edit_nationality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="Nationality" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/update_nationality_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:text="@string/update" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="75pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:layout_marginStart="5pt"
            android:gravity="center"
            android:text="Location : "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edit_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="Location" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/update_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:text="@string/update" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="105pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:layout_marginStart="5pt"
            android:gravity="center"
            android:text="Phone  : "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edit_phoneno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:inputType="phone"
            android:maxLength="10"
            android:hint="Phone number" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/update_phoneno_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:text="@string/update" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="135pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:layout_marginStart="5pt"
            android:gravity="center"
            android:text="Gender : "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edit_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="Gender" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/update_gender_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:text="@string/update" />

    </LinearLayout>

</FrameLayout>